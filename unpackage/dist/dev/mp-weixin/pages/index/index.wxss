.swiper {
	margin-bottom: 20rpx;
	min-height: 450rpx;
}
.topBanner {
	width: 750rpx;
}
.banner-img {
	width: 750rpx;
}
/**商品**/
.main-item {
	width: 750rpx;
	background-color: #FFFFFF;
}
.main-titel {
	width: 90%;
	margin: 0 auto;
	font-size: 35rpx;
	font-weight: 600;
	font-style: italic;
	padding-top: 15rpx;
}
.main-titel .l-3 {
	padding: 0 15rpx;
	color: #aeaeae;
}
.main-titel .l-4 {
	font-style: normal;
	color: #414141;
	font-weight: normal;
	font-size: 28rpx;
	line-height: 40rpx;
}
.i_item {
	width: 90%;
	margin: 0 auto;
	background-color: #ffffff;
	height: 220rpx;
	margin-top: 20rpx;
	border-bottom: 1px solid #eeeeee;
}
.i_l {
	float: left;
	width: 200rpx;
	height: 200rpx;
}
.i_l image {
	width: 180rpx;
	height: 180rpx;
	margin: 10rpx 0 0 0;
	border-radius: 25rpx;
}
.i_r {
	width: calc(100%-200upx);
	padding-top: 10rpx;
}
.i_r_t {
	font-size: 30rpx;
	font-weight: 600;
	height: 45rpx;
	line-height: 45rpx;
}
.i-r-date {
	color: #666666;
	font-size: 25rpx;
	height: 45rpx;
	line-height: 45rpx;
	margin-bottom: 30rpx;
	margin-top: 5rpx;
}
.i-r-intro {
	background-color: #fbe3c0;
	width: initial;
	text-align: center;
	border-radius: 22rpx;
	padding: 9rpx 30rpx;
	font-size: 20rpx;
}
.i-p {
	position: absolute;
	right: 40rpx;
	margin-top: -130rpx;
	text-align: center;
}
.i-p .i-p-a {
	margin: 0 auto;
	color: #d8d8d8;
}
.i-p .i-p-b {
	margin: 0 auto;
	color: #f99c9c;
}

