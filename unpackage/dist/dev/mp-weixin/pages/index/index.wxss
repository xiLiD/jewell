.swiper {
	margin-bottom: 20rpx;
	min-height: 450rpx;
}
.topBanner {
	width: 750rpx;
}
.banner-img {
	width: 750rpx;
}
/**商品**/
.main-item {
	width: 750rpx;
	background-color: #FFFFFF;
}
.main-titel {
	width: 90%;
	margin: 0 auto;
	font-size: 35rpx;
	font-weight: 600;
	font-style: italic;
	padding-top: 15rpx;
}
.main-titel .l-3 {
	padding: 0 15rpx;
	color: #aeaeae;
}
.main-titel .l-4 {
	font-style: normal;
	color: #414141;
	font-weight: normal;
	font-size: 28rpx;
	line-height: 40rpx;
}
.i_item {
	width: 90%;
	margin: 0 auto;
	background-color: #ffffff;
	height: 220rpx;
	margin-top: 20rpx;
	border-bottom: 1px solid #eeeeee;
}
.i_l {
	float: left;
	width: 200rpx;
	height: 200rpx;
}
.i_l image {
	width: 180rpx;
	height: 180rpx;
	margin: 10rpx 0 0 0;
	border-radius: 25rpx;
}
.i_r {
	width: calc(100%-200upx);
	padding-top: 10rpx;
}
.i_r_t {
	font-size: 30rpx;
	font-weight: 600;
	height: 45rpx;
	line-height: 45rpx;
}
.i-r-date {
	color: #666666;
	font-size: 25rpx;
	height: 45rpx;
	line-height: 45rpx;
	margin-bottom: 30rpx;
	margin-top: 5rpx;
}
.i-r-intro {
	/* background-color: #fbe3c0; */
			background-color: rgb(251, 184, 5);
	width: initial;
	text-align: center;
	border-radius: 20rpx 0 20rpx 0;
	padding: 4rpx 14rpx;
	font-size: 20rpx;
	position: absolute;
	bottom: 0;
	right: 0;
}
.i-p {
	position: absolute;
	right: 40rpx;
	margin-top: -130rpx;
	text-align: center;
}
.i-p .i-p-a {
	margin: 0 auto;
	color: #d8d8d8;
}
.i-p .i-p-b {
	margin: 0 auto;
	color: #f99c9c;
}
.member-info {
	width: 90%;
	margin: 15rpx auto 15rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border: 1px solid #d10713;
	border-radius: 20rpx;
	padding: 20rpx 20rpx;
}
.member-avater {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	overflow: hidden;
	-webkit-box-shadow: 0 0 4rpx #d10713;
	        box-shadow: 0 0 4rpx #d10713;
}
.nick {
	margin-left: 15rpx;
}
uni-image {
	width: 100%;
	height: 100%;
}
.m-name-b {
	float: left;
	background-color: #2d2c31;
	color: #f6d79e;
	width: 170rpx;
	border-radius: 11rpx;
	margin-top: 7rpx;
	margin-left: 15px;
}
.m-rank-name {
	font-size: 22rpx;
	float: left;
	width: 130rpx;
	height: 45rpx;
	line-height: 45rpx;
	text-align: center;
}
.m-name-b image {
	width: 30rpx;
	height: 30rpx;
	float: right;
	margin-right: 10rpx;
	margin-top: 6rpx;
}
.m-rank-up {
	width: 40rpx;
	height: 40rpx;
	float: left;
	margin-top: -15rpx;
	margin-left: -25rpx;
}
.m-rank-up image {
	width: 40rpx;
	height: 40rpx;
}
.index-menu {
	width: 90%;
	margin: 0 auto;
}
.index-menu-item {
	width: 100%;
	height: 250rpx;
	margin-top: 30rpx;
	position: relative;
	background-image: url(/static/images/index-back.jpg);
	background-position: center center;
	background-size: cover;
	border-radius: 20rpx;
	/* overflow: hidden; */
}
.item-name {
	font-size: 40rpx;
	color: #fff;
	font-weight: bold;
	border-bottom: 1px solid #fff;
	display: inline-block;
	/* margin-left: 20upx; */
	position: absolute;
	left: 20rpx;
	top: 10rpx;
	/* margin-top:10upx; */
}
.item-status {
	font-size: 34rpx;
	color: #fff;
}
.item-time {
	position: absolute;
	top: 0;
	right: 0;
	border-radius: 0 20rpx 0 20rpx;
	background-color: rgb(251, 184, 5);
	padding: 4rpx 15rpx;
	font-size: 24rpx;
	color: #fff;
	/* font-size: 20upx; */
}
.item-time text {
	font-size: 24rpx;
}
.i-r-date-time {
	/* background-color: rgba(0, 0, 0, 0.8); */
	font-size: 50rpx;
	color: #fff;
	border-radius: 20rpx;
	text-align: center;
	padding: 10rpx 15rpx;
	/* width: 250upx; */
	margin: 0 auto;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}

