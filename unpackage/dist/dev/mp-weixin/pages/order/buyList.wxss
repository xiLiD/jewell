
.container,
page {
	background-color: #f4f5f6;
}
.main {
	width: 100%;
}
.main .main-top {
	width: 100%;
	border-bottom: 1px solid #eaeaea;
	height: 90rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background: #FFFFFF;
	margin-bottom: 20rpx;
}
.main-top view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	float: left;
	text-align: center;
	height: 90rpx;
	line-height: 90rpx;
}
.main-top view .clon {
	display: block;
	border-bottom: 2px solid #159f66;
	height: 86rpx;
	width: 90rpx;
	margin: 0 auto;
	color: #159f66;
}
.main .main-item {
	width: 750rpx;
	margin: 0 auto;
	padding: 13rpx 20rpx;
	margin-top: 10rpx;
	background: #FFFFFF;
}
.state_warp {
	width: 100%;
	height: 80rpx;
	font-weight: 600;
}
.state_warp view:nth-child(1) {
	float: left;
	height: 80rpx;
	line-height: 80rpx;
	color: #000000;
}
.state_warp view:nth-child(2) {
	float: right;
	height: 80rpx;
	line-height: 80rpx;
	color: #df9a5f;
	padding-right: 20rpx;
}
.ordercp {
	width: 100%;
	margin-top: 10rpx;
	clear: both;
}
.product-img {
	width: 180rpx;
	height: 160rpx;
	float: left;
}
.product-img image {
	width: 150rpx;
	height: 150rpx;
	border-radius: 20rpx;
}
.product-r {
	float: left;
	width: 500rpx;
}
.product-title {
	height: 45rpx;
	line-height: 45rpx;
	font-size: 30rpx;
	color: #000000;
	font-weight: 500;
}
.product-intro {
	height: 45rpx;
	line-height: 45rpx;
	font-size: 30rpx;
	color: #bfbfbf;
	font-weight: 500;
	font-size: 28rpx;
}
.product-price {
	font-size: 30rpx;
	color: #bfbfbf;
	font-weight: 500;
	font-size: 28rpx;
	margin-top: 25rpx;
}
.orderbt {
	width: 100%;
	margin-top: 20rpx;
	clear: both;
	height: 70rpx;
}
.orderbt .order-btn {
	color: #a75863;
	border: 1px solid #a75863;
	width: 200rpx;
	text-align: center;
	float: right;
	margin-left: 15rpx;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 8rpx;
}

