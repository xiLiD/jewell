
page {
	background-color: #ffffff !important;
}
.t-box {
	background-color: #ffffff;
	width: 92%;
	margin-left: 4%;
	padding: 11.25rpx 0 7.5rpx 0;
	margin-top: 37.5rpx;
}
.t-item {
	border-bottom: 1px solid #efefef;
	margin: 30rpx 0 30rpx 0;
	clear: both;
	color: #666666;
}
.t-item view {
	height: 55rpx;
	line-height: 55rpx;
	margin-bottom: 15rpx;
}
.item-left {
	width: 150rpx;
	color: #000000;
}
.t-t {
	width: 150rpx;
	text-align: right;
	float: left;
	font-size: 30rpx;
}
.t-input {
	margin: 19rpx 0 3.75rpx 0;
	height: 49rpx;
	line-height: 49rpx;
	font-size: 26rpx;
}
.b-box {
	width: 92%;
	margin-left: 4%;
}
.blt-botton {
	color: #f8d79f;
	background-color: #201f24;
	margin-bottom: 19rpx;
	width: 100%;
	text-align: center;
	height: 86rpx;
	line-height: 86rpx;
	border-radius: 11rpx;
	font-size: 30rpx;
}
.blt-r {
	color: #5e5e5e;
	font-size: 22.5rpx;
	float: left;
}
.blt-z {
	color: #5e5e5e;
	font-size: 22.5rpx;
	float: right;
}

/*顶部*/
.main-top {
	width: 100%;
	height: 300rpx;
}
.top-info {
	position: absolute;
	right: 30rpx;
	margin-top: 20rpx;
	color: #000000;
}
.top-title {
	width: 100%;
	text-align: center;
	font-weight: 600;
	font-size: 39rpx;
	padding-top: 100rpx;
}
.top-intro {
	text-align: center;
	padding-top: 40rpx;
}

